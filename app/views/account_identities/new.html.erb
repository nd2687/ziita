<%= form_for @account, url: :account_identity do |f| %>
  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :identify_name, class: "col-xs-4" %>
      <div class="col-xs-8">
        <%= f.text_field :identify_name, autofocus: true, class: "form-control" %>
        <%= error_message(@account, :identify_name) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "col-xs-4" %>
      <div class="col-xs-8">
        <%= f.text_field :email, class: "form-control" %>
        <%= error_message(@account, :email) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-xs-4" %>
      <div class="col-xs-8">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-xs-4" %>
      <div class="col-xs-8">
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <%= error_message(@account, :password_confirmation) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <%= submit_tag '登録する', class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
