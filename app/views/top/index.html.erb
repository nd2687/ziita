<div class="articlesAndAny">
  <ul class="list-group articles">
    <% @articles.each do |article| %>
      <li class="list-group-item article-wrap" data-article_id="<%= article.id %>">
        <%= link_to article.title, article %>
        <% if ( stack_count = article.stacks.count) > 0 %>
        <span class="pull-right label label-success label-as-badge">
          <%= stack_count %>
        </span>
        <% end %>
      </li>
    <% end %>
    <% if @articles.count == 20 %>
      <%= content_tag :li, class: "x-more", style: "text-align:center;padding-top:6px",
            data: { href: more_articles_path } do %>
        <%= image_tag("/images/ajax-loader.gif") %>
      <% end %>
    <% end %>
  </ul>
</div>
<hr>

<ul class="nav nav-pills">
  <li role="presentation">
    <%= link_to '記事一覧', :articles %>
  </li>
</ul>

<hr>
<p>登録タグ一覧</p>
<% @tags.each do |tag| %>
<span class="label label-default top-tag-index">
  <%= link_to tag, tag_articles_path(tag) %>
</span>
<% end %>
