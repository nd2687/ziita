<ul class="nav nav-pills">
  <li role="presentation">
    <%= link_to '記事一覧', :articles %>
  </li>
</ul>
<hr>

<div class="articlesAndAny">
  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item article-wrap">
        <%= link_to article.title, article %>
        <% if article.comments.count > 0 %>
        <span class="badge">
          <%= link_to "#{article.comments.count}", [ article, :comments ] %>
        </span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<hr>
<p>登録タグ一覧</p>
<ul class="nav nav-pills">
  <% @tags.each do |tag| %>
    <li role="presentation">
      <%= link_to tag, tag_articles_path(tag) %>
    </li>
  <% end %>
</ul>
