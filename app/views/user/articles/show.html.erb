<% @page_title = @article.title  %>

<p><%= link_to '戻る', [ :user, :articles ] %></p>

<hr>
<p>記事を書いた人</p>
<p>
  <%= link_to @article.account.identify_name, user_account_path(
    identify_name: @article.account.identify_name, id: @article.account.id) %>さん
</p>

<hr>
<div class="article-title">
<p class="article-wrap h3"><%= @article.title %></p>
</div>

<hr>
<div class="article-wrap">
  <%= markdown @article.body %>
</div>

<hr>
<p class="created">
  <%= link_to @article.account.identify_name, user_account_path(
    identify_name: @article.account.identify_name, id: @article.account.id) %>
  has created in
  <%= @article.created_at.strftime('%Y/%m/%d %H:%M') %>
  <% if current_user && @article.account == current_user %>
    : <%= link_to '記事を編集する', edit_user_article_path(
            identify_name: current_user.identify_name, id: @article) %><br>
      <%= link_to "削除", user_article_path(identify_name: current_user.identify_name, id: @article),
            method: :delete, data: { confirm: "本当に削除しますか？" } %>
  <% end %>
</p>

<p>comments</p>
<ul class="list-group">
  <% @comments.each do |comment| %>
    <li class="list-group-item">
      <p><%= comment.name %></p>
      <%= hbr comment.body %>
      <p class="created">
        <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
      </p>
    </li>
  <% end %>
</ul>

<hr>
<p><%= link_to 'コメントを追加', new_user_article_comment_path(identify_name: actual_user.identify_name, article_id: @article.id) %></p>
