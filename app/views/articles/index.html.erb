<p><%= link_to '戻る', :root %></p>

<ul class="list-group">
  <% @articles.each do |article| %>
    <li class="list-group-item article-wrap">
      <%= link_to article.title, article %>
      <% if article.comments.count > 0 %>
      <span class="badge">
        <%= link_to "#{article.comments.count}", [ article, :comments ] %>
      </span>
      <% end %>
    </li>
  <% end %>
</ul>
