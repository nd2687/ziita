<div class="article-title">
  <p class="article-wrap h3"><%= @article.title %></p>
</div>
<div>
  <% if (count = @article.stacks.count) > 0 %>
    ★ <%= count %>
  <% end %>
  <% if current_user && current_user.stackable_for?(@article) %>
    <%= link_to "stack!", like_article_path(access_token: @article.access_token), method: :patch, class: 'button' %>
  <% end %>
</div>
<div class="right-elm">
  <%= tag_link @article.tag_list %>
</div>

<hr>
<div class="article-wrap">
  <%= markdown @article.body %>
</div>

<hr>
  <%#= link_to @article.account.identify_name, user_root_path(
    identify_name: @article.account.identify_name) %>
  <%# 作成日時
  <%#= @article.created_at.strftime('%Y/%m/%d %H:%M') %>
<p class="right-elm">
  <% if current_user && @article.account == current_user %>
    <%= link_to '記事編集', edit_user_article_path(
          identify_name: current_user.identify_name, access_token: @article.access_token) %><br>
  <% end %>
</p>

<p><%= link_to 'コメントをする', [ :new, @article, :comment ] %></p>
<ul class="list-group">
  <% @comments.each do |comment| %>
    <li class="list-group-item">
      <p><%= comment.name %></p>
      <%= hbr comment.body %>
      <p class="right-elm">
        <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
      <p>
    </li>
  <% end %>
</ul>

<p class="right-elm">
  <% if current_user && @article.account == current_user %>
    <%= link_to "この記事を削除する", user_article_path(identify_name: current_user.identify_name, access_token: @article.access_token),
          method: :delete, data: { confirm: "本当に削除しますか？" } %>
  <% end %>
</p>
