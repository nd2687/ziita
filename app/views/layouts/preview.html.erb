<!DOCTYPE html>
<html>
  <head>
    <title>Ziita</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= stylesheet_link_tag 'preview', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'preview', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="header">
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
          <%= render 'user/shared/header' %>
        </div>
      </nav>
    </div>

    <div class="page-content-wrapper" id="preview-page">
      <div class="row">
        <%= flash_messages %>
        <%= yield %>
      </div>
    </div>

  </body>
</html>
