<div class="page-header">
  <h1>バグ報告</h1>
</div>

<%= form_for @bug_report, url: :bug_reports do |f| %>
  <table class="table">
    <tr>
      <th><%= f.label :title, "件名" %></th>
      <%= error_message(@bug_report, :title) %>
      <td><%= f.text_field :title, placeholder: "件名", autofocus: true %></td>
    </tr>
    <tr>
      <th><%= f.label :body, "バグ内容" %></th>
      <%= error_message(@bug_report, :body) %>
      <td><%= f.text_area :body, placeholder: "バグ内容", class: 'ReportArea' %></td>
    </tr>
  </table>

  <div class="form-group">
    <%= f.submit "報告", class: "btn btn-primary" %>
  </div>
<% end %>
